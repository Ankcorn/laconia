{
  "name": "laconia",
  "version": "0.1.0",
  "description": "",
  "scripts": {
    "clean": "lerna clean --yes || true",
    "postclean": "rm -rf node_modules",
    "postinstall": "lerna bootstrap",
    "test": "jest '/test' --coverage",
    "test:watch": "jest --runInBand --watch '/test'",
    "test:integration": "jest '/integration-test'",
    "test:acceptance": "npm run deploy-acceptance && npm run acceptance-test",
    "test:all": "npm run test && npm run test:integration && npm run test:acceptance",
    "test:jslint": "standard",
    "test:packagelint": "lerna exec pjl-cli -- -c \\$LERNA_ROOT_PATH/.npmpackagejsonlintrc.json",
    "deploy-acceptance": "AWS_REGION=eu-west-1 lerna exec --scope laconia-acceptance-test sls deploy",
    "remove-acceptance": "AWS_REGION=eu-west-1 lerna exec --scope laconia-acceptance-test sls remove",
    "acceptance-test": "AWS_REGION=eu-west-1 jest '/laconia-acceptance-test'",
    "posttest": "npm run test:jslint && npm run test:packagelint",
    "publish:coverage": "cat ./coverage/lcov.info | coveralls",
    "compile:watch": "lerna run --parallel compile:watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ceilfors/laconia.git"
  },
  "author": "Wisen Tanasa <wisen@ceilfors.com>",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/ceilfors/laconia/issues"
  },
  "homepage": "https://github.com/ceilfors/laconia#readme",
  "devDependencies": {
    "aws-sdk": "^2.0.1",
    "aws-sdk-mock": "^1.7.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-jest": "^22.0.4",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "coveralls": "^3.0.0",
    "dynamodb-local": "0.0.18",
    "jest": "^22.0.3",
    "jest-extended": "^0.6.0",
    "lerna": "^2.5.1",
    "lodash": "^4.17.5",
    "npm-package-json-lint": "^2.11.2",
    "standard": "^10.0.3"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      ".*test/",
      ".serverless",
      "laconia-test-helper",
      "packages/laconia-.*/lib"
    ],
    "setupTestFrameworkScriptFile": "jest-extended"
  },
  "standard": {
    "envs": [
      "jest"
    ]
  }
}
